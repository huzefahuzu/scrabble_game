<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 p-0">
        <%= form_with(model: player, local: true, class: "player_details") do |form| %>
          <% if player.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

              <ul>
              <% player.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="card">
            <div class="card-header">
              Player Details
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= form.label :full_name, class: "required" %>
                    <%= form.text_field :full_name, class: "form-control", required: true %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <%= form.label :mobile %>
                    <%= form.number_field :mobile, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= form.label :email, class: "required" %>
                    <%= form.email_field :email, class: "form-control", required: true  %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group mt-3">
            <%= form.submit class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  $(".player_details").validate();
</script>